<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorTextViewPressed</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@anim/animation_between_layout_no_mow</item> /* Set standart layout animation */
    </style>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom Toolbar main menu -->
    <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorToolBarBackground</item>
        <item name="android:textColor">@color/colorToolBarText</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom switch -->
    <style name="SwitchAuto" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:colorControlActivated">@color/colorSwitchDefault</item>
        <item name="android:textColor">@color/colorSwitchChecked</item>
        <item name="android:colorForeground">@color/colorSwitchDisabled</item>
        <item name="colorAccent">@color/colorTextViewPressed</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="NavigationView" parent="@style/AppTheme">
        <item name="android:fontFamily">casual</item>
    </style>
    
    
    

</resources>

