<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="384dp"
        android:contentDescription="@string/image_name_0"
        android:layout_margin="25dp"
        app:srcCompat="@drawable/lsr_name_1" />


    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/edittext_0"
        android:textSize="20dp"
        android:backgroundTintMode="src_over"
        android:layout_margin="5dp"
        android:ems="13"
        android:inputType="textEmailAddress"
        android:text="Email" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:background="@drawable/edittext_0"
        android:ems="13"
        android:inputType="textPassword"
        android:text="Password" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        >

        <Button
            android:id="@+id/firstpage_log_but"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_0"
            android:layout_marginEnd="15dp"
            android:text="@string/but_log_0" />

        <Button
            android:id="@+id/firstpage_reg_but"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_0"
            android:onClick="onClink"
            android:text="@string/but_reg_0" />

    </LinearLayout>


    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=".?." />

</LinearLayout>