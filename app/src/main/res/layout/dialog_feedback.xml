<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_background_dialog_feedback"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_opinion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/shape_textview_0"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/textview_opinion"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimenEditTextHeight1"
        android:layout_margin="3dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/selector_edittext_0"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="@string/editText_name"
        android:importantForAutofill="no"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimenEditTextHeight1"
        android:layout_margin="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:autofillHints=""
        android:background="@drawable/selector_edittext_0"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="@string/editText_email_1"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/selector_edittext_0"
        android:ems="10"
        android:fontFamily="casual"
        android:gravity="start"
        android:hint="@string/editText_text"
        android:importantForAutofill="no"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_button_0"
            android:fontFamily="casual"
            android:text="@string/button_cancel" />

        <Button
            android:id="@+id/button_dialog_cancel"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/selector_button_0"
            android:fontFamily="casual"
            android:text="@string/button_send" />
    </LinearLayout>

</LinearLayout>