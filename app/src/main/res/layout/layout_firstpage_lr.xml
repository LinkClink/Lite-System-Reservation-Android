<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_textview_0"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/but_log_0"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:contentDescription="@string/image_name_0"
                app:srcCompat="@drawable/splash_screenlogo" />

            <Switch
                android:id="@+id/switch_save_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:checked="true"
                android:fontFamily="casual"
                android:text="@string/switch_auto_text"
                android:textOff="@string/switch_auto_off"
                android:textOn="@string/switch_auto_on"
                android:showText="true"
                android:theme="@style/SwitchAuto" />

            <EditText
                android:id="@+id/editText_login_firstpage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:autofillHints=""
                android:background="@drawable/selector_edittext_0"
                android:backgroundTintMode="src_over"
                android:ems="13"
                android:fontFamily="casual"
                android:hint="@string/editText_hint_0"
                android:inputType="text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText_pass_firstpage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:autofillHints=""
                android:background="@drawable/selector_edittext_0"
                android:ems="13"
                android:fontFamily="casual"
                android:hint="@string/editText_hint_1"
                android:inputType="textPassword"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_singUp_firstpage"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_button_0"
                    android:fontFamily="casual"
                    android:onClick="RegistrationLayout"
                    android:text="@string/but_reg_0" />

                <Button
                    android:id="@+id/button_login_firstpage"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/selector_button_0"
                    android:fontFamily="casual"
                    android:onClick="LogIn"
                    android:text="@string/but_log_0" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/component_bottom_toolbar" />
</RelativeLayout>