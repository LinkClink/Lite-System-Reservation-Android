<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/lsr_name_1"
        android:contentDescription="@string/image_name_0" />

    <EditText
        android:id="@+id/editText_login_registration"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:autofillHints="no"
        android:background="@drawable/selector_edittext_0"
        android:ems="13"
        android:fontFamily="casual"
        android:hint="@string/editText_hint_0"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText_pass1_registration"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:autofillHints="no"
        android:background="@drawable/selector_edittext_0"
        android:ems="13"
        android:fontFamily="casual"
        android:hint="@string/editText_hint_1"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText_pass2_registration"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:autofillHints="no"
        android:background="@drawable/selector_edittext_0"
        android:ems="13"
        android:fontFamily="casual"
        android:hint="@string/editText_hint_1"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/button_back_registration"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:background="@drawable/button_0"
            android:fontFamily="casual"
            android:onClick="PreviousLayout"
            android:text="@string/registration_button_0" />

        <Button
            android:id="@+id/button_singUp_registration"
            style="@style/Widget.AppCompat.Button.Colored"
            android:fontFamily="casual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_0"
            android:onClick="RegisterDataCheck"
            android:text="@string/but_reg_0" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>